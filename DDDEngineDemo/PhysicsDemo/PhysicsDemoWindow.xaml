<Window x:Class="DDDEngineDemo.PhysicsDemo.PhysicsDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Physics Demo"  Height="600" Width="800" Closing="Dispose" MinHeight="300" MinWidth="300" MouseMove="RotateCamera" MouseWheel="MoveCamera">
    <Grid>
        <Canvas Name="Canvas" Background="White"></Canvas>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10 10">
            <Label Content="Amount: " />
            <TextBox Name="Amount" Width="40" TextAlignment="Center" VerticalAlignment="Center" Text="5"/>
            <Label Content="g: " Margin="10 0 0 0"/>
            <TextBox Name="TextBox" Width="40" TextAlignment="Center" VerticalAlignment="Center" Text="9.8"/>
            <Button Padding="5 0" Content="Restart" Margin="10 0 0 0" Click="Restart"/>
        </StackPanel>
    </Grid>
</Window>
