<Window x:Class="DDDEngineDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DDDEngine Demo" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label Content="Choose demo to play: " />
            <ListBox Margin="10 10" x:Name="DemoList">
                <ListBoxItem Content="Models" MouseDoubleClick="Demo" />
                <ListBoxItem Content="Cube Transformation" MouseDoubleClick="CubeTransformationDemo" />
                <ListBoxItem Content="Physics" MouseDoubleClick="PhysicsDemo" />
                <ListBoxItem Content="Simple Game" MouseDoubleClick="GameDemo" />
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
