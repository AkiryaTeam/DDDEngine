<Window x:Class="DDDEngineDemo.CubeDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cube Demo" Height="600" Width="800" Closing="Dispose" MinHeight="300" MinWidth="300">
    <Grid>
        <Canvas Name="Canvas" Background="White"></Canvas>
        <Label x:Name="Label" HorizontalContentAlignment="Center" Content="" VerticalAlignment="Top" HorizontalAlignment="Center" Width="262" Margin="0 10 0 0" FontSize="26.667"/>
        <StackPanel VerticalAlignment="Bottom" Margin="0 0 0 10" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="OrthButton" Content="Orthographic" HorizontalAlignment="Center" Width="100" Click="SetOrthographic" Margin="5 0"/>
            <Button x:Name="PerspButton" Content="Perspective" HorizontalAlignment="Center" Width="100" Click="SetPerspective" Margin="5 0"/>
        </StackPanel>
    </Grid>
</Window>
